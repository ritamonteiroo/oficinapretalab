const a = null;
const b = 20;
const c = true;
const d = '';

if (b === 20 && c != false && d == 0) {
    console.log('Folia')
 } else {
    console.log('Descanso')
 }


/* b=== 20 estritamente igual
c!= false extritamente diferente
d == 0 string vazia é tratada como 0, quando o tipo não é considerado
